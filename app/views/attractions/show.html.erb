<h1><%= @attraction.name %></h1>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<p>Height Required: <%= @attraction.min_height %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Ticket Requirement: <%= @attraction.tickets %></p>
<% if !admin? %>
  <%= form_for(@ride) do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :attraction_id, :value => @attraction.id %>
    <%= f.button "Go on this ride" %>
  <% end %>
<% end %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) if admin?%>
